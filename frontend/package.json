{
  "name": "meeting-intelligence-frontend",
  "version": "1.0.0",
  "description": "AI Meeting Intelligence Platform - Angular Frontend Application",
  "author": "AI Meeting Intelligence Team",
  "license": "MIT",
  "keywords": [
    "angular",
    "meeting",
    "ai",
    "transcription",
    "insights",
    "tailwindcss",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/meeting-intelligence-platform.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:watch": "ng test --watch",
    "test:coverage": "ng test --code-coverage",
    "e2e": "ng e2e",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,css,scss,json}\"",
    "serve:dev": "ng serve --host 0.0.0.0 --port 4200 --poll=2000",
    "serve:prod": "ng serve --configuration production --host 0.0.0.0 --port 4200",
    "build:dev": "ng build --configuration development",
    "build:prod": "ng build --configuration production --aot --build-optimizer",
    "build:analyze": "ng build --configuration production --stats-json && npx webpack-bundle-analyzer dist/meeting-intelligence-frontend/stats.json",
    "docker:build": "docker build -t meeting-intelligence-frontend .",
    "docker:run": "docker run -p 4200:4200 meeting-intelligence-frontend",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "postinstall": "ngcc --properties es2020 browser module main"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@angular/service-worker": "^17.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0",
    "@angular/cdk": "^17.0.0",
    "@angular/material": "^17.0.0",
    "date-fns": "^2.30.0",
    "ngx-markdown": "^17.0.0",
    "socket.io-client": "^4.7.0",
    "chart.js": "^4.4.0",
    "ng2-charts": "^5.0.0",
    "ngx-file-drop": "^15.0.0",
    "ngx-toastr": "^19.0.0",
    "ngx-loading": "^17.0.0",
    "marked": "^9.1.0",
    "highlight.js": "^11.9.0",
    "fuse.js": "^7.0.0",
    "lodash-es": "^4.17.21",
    "@ngrx/store": "^17.0.0",
    "@ngrx/effects": "^17.0.0",
    "@ngrx/store-devtools": "^17.0.0",
    "@ngrx/router-store": "^17.0.0",

    "intersection-observer": "^0.12.2",
    "resize-observer-polyfill": "^1.5.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.2.0",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "tailwindcss": "^3.3.5",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "eslint": "^8.52.0",
    "@angular-eslint/builder": "^17.0.0",
    "@angular-eslint/eslint-plugin": "^17.0.0",
    "@angular-eslint/eslint-plugin-template": "^17.0.0",
    "@angular-eslint/schematics": "^17.0.0",
    "@angular-eslint/template-parser": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "@types/lodash-es": "^4.17.10",
    "@types/marked": "^6.0.0",
    "@types/socket.io-client": "^3.0.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "source-map-explorer": "^2.5.3",
    "protractor": "~7.0.0",
    "ts-node": "~10.9.0",
    "@types/chart.js": "^2.9.37",
    "@types/highlight.js": "^10.1.0"
  },
  "engines": {
    "node": ">=18.13.0",
    "npm": ">=8.19.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not IE 11"
  ],
  "lint-staged": {
    "*.{ts,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:coverage"
    }
  }
}
